{% extends "base.njk" %}

{% block content %}
  <section class="site-project-header">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8">
          <div class="site-project-header-content">
            <h1>
              {{ content | safe}}
            </h1>
          </div>
        </div>
        <div class="col-lg-4">
          <a href="#project" class="site-project-header-action scroll-to">
            <span>Scroll Down</span>
            <img src="/assets/images/arrow-down.svg" alt="arrow-down">
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="site-project" id="project">
    <div class="container">
      <div class="row">
        {% for portfolio in collections.portafolios | reverse %}

          {% if portfolio.data.lang == page.lang %}
            <div class="col-lg-6 col-md-10 mx-auto">
              <div class="site-project-item">
                <div class="site-project-item-thumb">
                  <a href="{{portfolio.url}}" class="read-more">
                    {% imagen portfolio.data.img,
          "project-thumb",
          "imagenFull",
          "" %}
                    {# <img src="/{{portfolio.data.img}}" alt="project-thumb"> #}
                  </div>
                  <div class="site-project-item-content">
                    <span>{{portfolio.data.subTitle}}</span>
                    <h3>{{portfolio.data.title}}</h3>
                    {{portfolio.data.linkText}}
                  </div>
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}

      </div>
    </div>
  </section>
{% endblock %}