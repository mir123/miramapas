{% extends "base.njk" %}

{% block content %}
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <section class="site-contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-5">
          <h1 class="site-contact-title">
            {{title}}
            <span>{{subTitle}}</span>
          </h1>
        </div>
        <div class="col-lg-6 ml-auto">
          <div class="site-contact-form">
            <h4>{{formTitle}}</h4>
            <form method="POST" action="https://formspree.io/f/mgvwbolw">
              <input name="subject" type="hidden" value="Mensaje en Miramapas"/>

              <div class="row">
                <div class="col-lg-6">
                  <input type="text" class="form-control" name="first-name" id="first-name" placeholder="Nombre">
                </div>
                <div class="col-lg-6">
                  <input type="text" class="form-control" name="last-name" id="last-name" placeholder="Apellido">
                </div>
                <div class="col-lg-6">
                  <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                </div>
                <div class="col-lg-6">
                  <input type="tel" class="form-control" name="tel" id="tel" placeholder="Teléfono">
                </div>
              </div>
              <div class="col-12">
                <textarea class="form-control" name="mensaje" id="aboutProject" rows="6" placeholder="Explícame qué tienes en mente"></textarea>
              </div>
              <div class="col-12">
                <div class="g-recaptcha" data-sitekey="6Le8QT8qAAAAAHxpzTTYLABjezuEEYE3pzIfBhRG"></div>
                <br/>
                <button type="submit" class="btn btn-primary" formtarget="_blank">
                  <span class="btn-area">
                    <span data-text="{{btnText}}">
                      {{btnText}}
                    </span>
                  </span>
                </button>
              </div>
            </div>
          </form>
          <p class="contact-form-generator mt-3">
            <strong>** </strong>
            <a href="https://fabform.io/" target="_blank">Static website forms</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}
{% block workTogether %}{% endblock %}